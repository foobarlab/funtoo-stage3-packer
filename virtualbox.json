{
  "builders": [
    {
      "boot_command": [
        "<enter>","<wait>",
        "<enter>","<wait10>",
        "<enter>","<wait10>","<wait10>","<wait10>",
        "passwd {{user `username`}}","<enter>","<wait>",
        "{{user `password`}}","<enter>","<wait>",
        "{{user `password`}}","<enter>","<wait>",
        "{{user `password`}}","<enter>","<wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disksize`}}",
      "hard_drive_interface": "sata",
      "guest_additions_mode": "disable",
      "guest_os_type": "{{user `guest_os_type`}}",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `systemrescuecd_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `systemrescuecd_url`}}",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "30s",
      "type": "virtualbox-iso",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage":[
        ["modifyvm","{{.Name}}","--memory","{{user `memory`}}"],
        ["modifyvm","{{.Name}}","--cpus","{{user `cpus`}}"],
        ["modifyvm","{{.Name}}","--audio","none"],
        ["modifyvm","{{.Name}}","--usb","off"]
      ]
    }
  ],
  "description": "{{user `box_description`}}",
  "post-processors": [
    {
      "output": "{{user `output_file`}}",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "SCRIPTS=/tmp",
        "MAKEOPTS=-j{{user `cpus`}}",
        "TIMEZONE=UTC",
        "BUILD_RUN=true",
        "BUILD_STAGE3_FILE={{user `stage3_file`}}",
        "BUILD_STAGE3_URL={{user `stage3_url`}}",
        "BUILD_STAGE3_PATH={{user `stage3_path`}}"
      ],
      "scripts": [
        "provision.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
  	"systemrescuecd_url": "{{env `BUILD_SYSTEMRESCUECD_FILE`}}",
    "systemrescuecd_checksum": "{{env `BUILD_SYSTEMRESCUECD_REMOTE_HASH`}}",
    "stage3_file": "{{env `BUILD_STAGE3_FILE`}}",
    "stage3_url": "{{env `BUILD_STAGE3_URL`}}",
    "stage3_path": "{{env `BUILD_STAGE3_PATH`}}",
    "output_file": "{{env `BUILD_OUTPUT_FILE`}}",
    "box_description": "{{env `BUILD_BOX_DESCRIPTION`}}",
    "guest_os_type": "{{env `BUILD_GUEST_TYPE`}}",
    "vm_name": "{{env `BUILD_BOX_NAME`}}",
    "memory": "{{env `BUILD_GUEST_MEMORY`}}",
    "cpus": "{{env `BUILD_GUEST_CPUS`}}",
    "disksize": "{{env `BUILD_GUEST_DISKSIZE`}}",
    "headless": "true",
    "username": "root",
    "password": "toor"
    
  }
}
